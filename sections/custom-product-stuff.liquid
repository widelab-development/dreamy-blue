                  <path
                    d="M4.42188 7.04309L6.38944 9.27532L10.0112 4.74121"
                    stroke="#1D1C50"
                    stroke-width="0.64"
                    stroke-miterlimit="10" />
                </svg>
                <span>{{ feature3_bottom }}</span>
              </li>
            </ul>
            <a href="{{ btn_link_bottom | default: '#' }}" class="custom-product-stuff__button">{{ btn_text_bottom }}</a>
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

