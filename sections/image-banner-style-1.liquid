      "id": "background_image_mobile",
      "label": "t:sections.image_banner_style_1.settings.background_image_mobile.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.heading.content"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.color_scheme.label"
    },
    {
      "type": "color",
