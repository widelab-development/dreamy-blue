      ],
      "default": "sm"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "t:sections.image_banner_style_1.settings.layout.label",
      "info": "t:sections.image_banner_style_1.settings.layout.info",
      "options": [
        {
          "value": "style-1",
          "label": "t:sections.image_banner_style_1.settings.layout.option__1.label"
        },
        {
          "value": "style-2",
          "label": "t:sections.image_banner_style_1.settings.layout.option__2.label"
        }
      ],
      "default": "style-2"
