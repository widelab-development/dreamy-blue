{{ 'section-image-banner-style-1.css' | asset_url | stylesheet_tag }}
{{ 'img-banner-1.css' | asset_url | stylesheet_tag }}

{% liquid
  assign heading = section.settings.heading
  assign layout = section.settings.layout
  assign button = section.settings
  assign img_desktop = section.settings.background_image_desktop | image_url
  assign img_mobile = section.settings.background_image_mobile | image_url
%}

<div class='image-banner-style-1'>
  <section {% render 'section-attr' %}>
    <div class='image-banner-style-1__container'>
      {% render 'img-banner-1', heading: heading, button: button, layout: layout, img_desktop: img_desktop, img_mobile: img_mobile %}
    </div>
  </section>
</div>

{% schema %}
{
  "name": "t:sections.image_banner_style_1.name",
  "class": "section-hero",
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "custom.overlay",
      "custom.popups"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.image_banner_style_1.settings.header_text.content"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "t:sections.image_banner_style_1.settings.heading.label",
      "info": "t:sections.image_banner_style_1.settings.heading.info",
      "default": "Hero image"
    },
    {
      "type": "header",
