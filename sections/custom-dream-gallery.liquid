      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#23215c"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "That's why we sell only one thing:"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#fff"
    },
    {
      "type": "textarea",
      "id": "title",
