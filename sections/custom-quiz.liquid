{{ 'section-custom-quiz.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign heading = section.settings.heading
  assign description = section.settings.description
  assign quiz_image = section.settings.quiz_image
  assign quiz_image_mobile = section.settings.quiz_image_mobile
  assign quiz_link = section.settings.quiz_link
  assign open_in_new_tab = section.settings.open_in_new_tab
  assign image = section.settings.image
  assign background_color = section.settings.background_color
  assign text_color = section.settings.text_color
-%}

<section
  id="shopify-section-{{ section.id }}"
  class="custom-quiz"
  style="--bg-color: {{ background_color }}; --text-color: {{ text_color }};"
>
  <div class="custom-quiz__grid">
    <div class="custom-quiz__content-wrapper">
      <div class="custom-quiz__content">
        <div class="custom-quiz__header">
          {%- if heading != blank -%}
            <h2 class="custom-quiz__heading" data-aos="fade-up">{{ heading }}</h2>
          {%- endif -%}
          {%- if description != blank -%}
            <div class="custom-quiz__description" data-aos="fade-up">{{ description }}</div>
          {%- endif -%}
        </div>

        {%- if quiz_image != blank or quiz_image_mobile != blank -%}
          <div class="custom-quiz__embed-wrapper">
            <a
              href="{{ quiz_link | default: '#' }}"
              class="custom-quiz__link"
              {% if open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
              aria-label="Start the quiz: {{ heading | escape }}"
            >
              {%- if quiz_image != blank -%}
                <img
                  src="{{ quiz_image | image_url: width: 1000 }}"
                  alt="{{ quiz_image.alt | default: 'Start the quiz' | escape }}"
                  width="{{ quiz_image.width }}"
                  height="{{ quiz_image.height }}"
                  loading="lazy"
                  class="custom-quiz__quiz-image custom-quiz__quiz-image--desktop"
                >
              {%- endif -%}
              {%- if quiz_image_mobile != blank -%}
                <img
                  src="{{ quiz_image_mobile | image_url: width: 1000 }}"
                  alt="{{ quiz_image_mobile.alt | default: 'Start the quiz' | escape }}"
                  width="{{ quiz_image_mobile.width }}"
                  height="{{ quiz_image_mobile.height }}"
                  loading="lazy"
                  class="custom-quiz__quiz-image custom-quiz__quiz-image--mobile"
                >
              {%- endif -%}
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>

    <div class="custom-quiz__image-wrapper">
      {%- if image != blank -%}
        <img
          src="{{ image | image_url: width: 1200 }}"
          alt="{{ image.alt | default: heading | escape }}"
          width="{{ image.width }}"
          height="{{ image.height }}"
          loading="lazy"
        >
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Quiz",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Answer. Order. Awesome."
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>This quick quiz helps you find the right pillow(s) for exactly how and why you sleep.</p>"
    },
    {
      "type": "image_picker",
      "id": "quiz_image",
      "label": "Quiz Image (Desktop)",
      "info": "This image will be displayed in the content area and will link to the quiz."
    },
    {
      "type": "image_picker",
      "id": "quiz_image_mobile",
      "label": "Quiz Image (Mobile)",
      "info": "This image will be displayed on mobile devices. If empty, the desktop image will be used."
    },
    {
      "type": "url",
      "id": "quiz_link",
      "label": "Quiz Link",
      "info": "The URL the image will link to."
    },
    {
      "type": "checkbox",
      "id": "open_in_new_tab",
      "label": "Open link in a new tab",
      "default": true
    },
    {
      "type": "header",
      "content": "Appearance Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Side Image (Right Column)"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color (Left Column)",
      "default": "#1D1C50"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Custom Quiz"
    }
  ]
}
{% endschema %}
