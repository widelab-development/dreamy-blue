{{ 'product-specification-5.css' | asset_url | stylesheet_tag }}
{{ 'feature-special.css' | asset_url | stylesheet_tag }}

{% liquid
  assign layout = section.settings.layout
  assign class = section.settings.font_size_heading
  assign heading = section.settings.text_heading
  assign duration = section.settings.text_duration
  assign effect = section.settings.text_effect
  assign tag_name = section.settings.text_tag_name
  assign heading_width_desktop = section.settings.text_heading_width_desktop
  assign heading_width_mobile = section.settings.text_heading_width_mobile
  assign image_1 = section.settings.image_1
  assign image_2 = section.settings.image_2
  assign aspect_ratio = section.settings.aspect_ratio
  assign block = section.blocks
%}

<section {% render 'section-attr' %}>
  <div class='product-specification-style-5'>
    <xo-container class='product-specification-style-5__container'>
      <div class='product-specification-style-5__content'>
        {% render 'product-specification-5',
          class: class,
          heading: heading,
          tag_name: tag_name,
          duration: duration,
          effect: effect,
          heading_width_desktop: heading_width_desktop,
          heading_width_mobile: heading_width_mobile,
          image_1: image_1,
          image_2: image_2,
          aspect_ratio: aspect_ratio,
          block: block,
          layout: layout
        %}
      </div>
    </xo-container>
  </div>
</section>

