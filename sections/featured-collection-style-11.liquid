{{ 'featured-collection-11.css' | asset_url | stylesheet_tag }}

{% liquid
  assign heading = section.settings.heading
  assign sub_heading = section.settings.sub_heading
  assign button = section.settings
  assign block = section.blocks
%}

<section {% render 'section-attr' %}>
  <div class='featured-collection-style-11'>
    <xo-container class='featured-collection-style-11__container'>
      <div class='featured-collection-style-11__content'>
        {% render 'featured-collection-11', heading: heading, sub_heading: sub_heading, button: button, block: block %}
      </div>
    </xo-container>
  </div>
</section>

