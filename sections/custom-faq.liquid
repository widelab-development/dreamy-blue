{% comment %} Section: FAQ with Top Background and White Box Content {% endcomment %}

{{ 'section-collapse-content.css' | asset_url | stylesheet_tag }}
{{ 'collapse-content-box-1.css' | asset_url | stylesheet_tag }}
{{ 'collapse.css' | asset_url | stylesheet_tag }}

<section {% render 'section-attr' %} style="position: relative; background-color: #1D1C50;">
  {% if section.settings.bg_image != blank %}
    <div class="faq-top-bg" style="background-image: url({{ section.settings.bg_image | image_url: width: 2000 }});">
      {% if section.settings.top_heading != blank %}
        <div class="faq-top-bg__overlay">
          <h1 class="faq-top-bg__heading">{{ section.settings.top_heading }}</h1>
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div class="faq-white-box">
    <xo-container class="collapse-content__container">
      {% render 'collapse-content-box-1',
        class: section.settings.font_size_heading,
        heading: section.settings.heading,
        block: section.blocks
      %}
    </xo-container>
  </div>
</section>

<style>
  .faq-top-bg {
    background-size: cover;
    background-position: center;
    height: 776px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 776px;
  }
  .faq-top-background-section .xo-section{
    background: var(--color-midnight-blue);
  }
  .faq-top-bg__overlay {
    position: absolute;
    top: 110px;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
  }

  .faq-top-bg__heading {
    color: white;
    font-size: 20rem !important;
    font-weight: 300;
    z-index: 2;
  }

  .faq-white-box {
    position: relative;
    z-index: 2;
    background-color: #f8f3ec;
    padding: 12rem 2.5rem;
    max-width: var(--xo-container-width, 1400px);
    margin: -20rem auto 0 auto;
  }
  .collapse-content-box-1__item {
    background-color: #ffffff;
  }

  .xo-collapse__trigger {
    min-height: 96px;
  }
  .xo-collapse__trigger-title {
    font-size: 20px;
    color: #000;
  }
  .collapse-content-box-1 {
    width: 92.6rem;
    max-width: 100%;
  }
  .collapse-content-box-1__heading {
    letter-spacing: 0;
    padding-bottom: 4.8rem;
  }

  @media (max-width: 768px) {
    .faq-top-bg__overlay {
      top: 50%;
      transform: translateY(-50%);
      height: max-content;
    }
    .faq-top-bg__heading {
      font-size: 9.6rem !important;
      margin: 0 !important;
      height: max-content;
    }
    .collapse-content-box-1__heading {
      font-size: 3.6rem !important;
      padding-bottom: 1.2rem;
    }
    .faq-white-box {
      padding: 3.6rem 0.5rem;
      margin-top: 0;
    }
    .faq-top-bg {
      min-height: 350px;
      height: 350px;
    }

    .xo-collapse__trigger {
      min-height: 61.44px;
      max-height: 61.44px;
    }
    .xo-collapse__trigger-title {
      font-size: 12.8px;
    }

    .xo-collapse__trigger-icon-default svg {
      width: 16px;
      height: 16px;
    }

    .xo-collapse__trigger-icon-active svg {
      width: 16px;
      height: 16px;
    }
  }
</style>

{% schema %}
{
  "name": "FAQ with Top Image",
  "tag": "section",
  "class": "section faq-top-background-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Top Background Image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Fallback background color",
      "default": "#1E1E5A"
    },
    {
      "type": "text",
      "id": "top_heading",
      "label": "Heading over background",
      "default": "FAQ"
    },
    {
      "type": "select",
      "id": "font_size_heading",
      "label": "Font size for content heading",
      "default": "h4",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "FAQ Section Heading",
      "default": "Frequently Asked <br>Questions"
    }
  ],
  "blocks": [
    {
      "type": "collapse",
      "name": "Collapse Item",
      "settings": [
        {
          "type": "richtext",
          "id": "title",
          "label": "Title",
          "default": "<p>Heading</p>"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Showcase a benefit of your product</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ with Top Image",
      "blocks": [{ "type": "collapse" }, { "type": "collapse" }, { "type": "collapse" }, { "type": "collapse" }]
    }
  ]
}
{% endschema %}
