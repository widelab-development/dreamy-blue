                            assign overtitle_bg_color = block.settings.overtitle_bg_color
                            assign overtitle_bg_color_hover = block.settings.overtitle_bg_color_hover
                          -%}
                          {% if product != blank and image_to_display != blank %}
                            <xo-carousel-slide>
                              <div
                                class='mega-menu-product-card color-{{ block.settings.color_scheme_box }}'
                                style="--overtitle-bg-color: {{ overtitle_bg_color }}; --overtitle-bg-color-hover: {{ overtitle_bg_color_hover }};"
                              >
                                <a href='{{ product.url }}' class='mega-menu-product-card__link'>
                                  <div class='mega-menu-product-card__image-wrapper'>
                                    <img
                                      src='{{ image_to_display | image_url: width: 450 }}'
                                      alt='{{ image_to_display.alt | default: product.title | escape }}'
                                      width='450'
                                      height='{{ 450 | divided_by: image_to_display.aspect_ratio | ceil }}'
                                      loading='lazy'>

                                    <div class="mega-menu-product-card__text-overlay">
                                      {% if overtitle != blank %}
                                        <span class="mega-menu-product-card__overtitle">{{ overtitle }}</span>
                                      {% endif %}
                                      {% if title != blank %}
                                        <h3 class="mega-menu-product-card__title">{{ title }}</h3>
                                      {% endif %}
                                    </div>
                                  </div>
                                </a>
                              </div>
                            </xo-carousel-slide>
                          {% endif %}
                      {% endcase %}
                    {% endfor %}
                  </xo-carousel-list>
                </xo-carousel-inner>
              </xo-carousel>
            {% elsif layout == 'link-list' %}
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'link-list' %}
                    {% liquid
                      assign heading = block.settings.heading
                      assign button = block.settings
                      assign collection_list = block.settings.collection_list
                    %}
                    {% render 'collection-link', heading: heading, collection_list: collection_list, button: button %}
                {% endcase %}
              {% endfor %}
            {% else %}
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'link-list' %}
                    {% liquid
                      assign heading = block.settings.heading
                      assign button = block.settings
                      assign collection_list = block.settings.collection_list
                    %}
                    {% render 'collection-link', heading: heading, collection_list: collection_list, button: button %}
                {% endcase %}
              {% endfor %}
            {% endif %}
          </div>



          <div class='mega-menu-1__item mega-menu-1__item--right' style='--lg: 12; --md: 12; --xs: 12'>
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'introducing-card' %}
                  {% liquid
                    assign heading = block.settings.heading
                    assign sub_heading = block.settings.sub_heading
                    assign image = block.settings.image
                    assign aspect_ratio = block.settings.aspect_ratio
                    assign color_scheme_box = block.settings.color_scheme_box
                  %}
                  {% render 'introducing-card',
                    title: heading,
                    description: sub_heading,
                    button: block,
                    image: image,
                    aspect_ratio: aspect_ratio,
                    color_scheme_box: color_scheme_box
                  %}
              {% endcase %}
            {% endfor %}
          </div>
        </xo-grid>
      </div>
    </div>
  </div>
</template>



