<style>

  .mega-menu-product-card .mega-menu-product-card__image-wrapper {
    position: relative;
    overflow: hidden; 
  }

  .mega-menu-product-card__text-overlay {
    position: absolute;
    top: 24px;
    left: 24px;
    z-index: 5; 
    display: flex;
    flex-direction: column;
    align-items: flex-start; 
    pointer-events: none; 
  }

  .mega-menu-product-card__overtitle {
    background-color: var(--overtitle-bg-color, rgba(0, 0, 0, 0.6));
    color: #000000;
    padding: 8px 36px;
    width: 172px;
    height: 34px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    font-family: 'twk_lausanne';
    font-weight: 300;
    line-height: 1;
    border-radius: 72px;
    margin-bottom: 0.5rem;
    transition: background-color 0.3s ease-in-out;
    margin-bottom: 8px;
  }

  .mega-menu-product-card__title {
    font-size: 16px;
    font-family: 'twk_lausanne';
    font-weight: 300;
    line-height: 1;
    margin: 0 !important;
    color: #000000;
  }

  .mega-menu-product-card:hover .mega-menu-product-card__overtitle {
    background-color: var(--overtitle-bg-color-hover, rgba(200, 50, 50, 0.8));
  }

  .mega-menu-product-card--horizontal .mega-menu-product-card__text-overlay {
    display: none;
  }
</style>


