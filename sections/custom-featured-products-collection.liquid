{%- style -%}
  .custom-featured-products-section {
    padding-top: 54px !important;
  }

  .custom-featured-products-collection {
    padding-top: 15rem !important;
    padding-bottom: 0rem !important;
  }
  .custom-featured-products__card--quiz {
    grid-column: 2 / 4;
    padding: 4rem;
    background-color: var(--color-midnight-blue);
    color: white;
  }

  .quiz-layout {
    display: flex;
    gap: 4rem;
    align-items: flex-start;
  }

  .quiz-left {
    flex: 1;
  }

  .quiz-right {
    flex: 1.4;
  }

  .quiz-right__link {
    display: block;
  }
  .quiz-right__image {
    display: block;
    width: 100%;
    height: auto;
    border-radius: 1rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .quiz-right__link:hover .quiz-right__image {
    transform: scale(1.03);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }

  .quiz-right__image--mobile {
    display: none;
  }

  .custom-featured-products__card--quiz {
    padding: 7.2rem 7.2rem 7.2rem 9.6rem;
  }

  @media (max-width: 768px) {
    .custom-featured-products-collection__container {
      padding-left: 0;
      padding-right: 0;
    }
    .quiz-layout {
      flex-direction: column;
    }

    .quiz-left,
    .quiz-right {
      width: 100%;
    }

    .custom-featured-products__card--quiz {
      grid-column: 1 / 4;
      padding: 2.8rem 2rem;
    }

    .quiz-right__image--desktop {
      display: none;
    }
    .quiz-right__image--mobile {
      display: block;
    }
  }
  @media (max-width: 992px) {
    .custom-featured-products-collection {
      padding-top: 11.6rem !important;
      padding-bottom: 0rem !important;
    }
    .custom-featured-products__grid {
      grid-template-columns: 1fr !important;
    }

    .custom-featured-products__card,
    .custom-featured-products__card--extra,
    .custom-featured-products__card--quiz {
      grid-column: auto !important;
    }

    .quiz-left{
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .quiz-heading{
      font-size: 3.8rem !important;
      max-width: 260px;
      text-align: center;
    }
  }
{%- endstyle -%}

<section id="shopify-section-{{ section.id }}" class="custom-featured-products-section">
  {{ 'section-custom-featured.css' | asset_url | stylesheet_tag }}

  {%- liquid
    assign heading = section.settings.heading
    assign subheading = section.settings.subheading
  -%}

  <div class="custom-featured-products custom-featured-products-collection">
    <div class="custom-section">
      <xo-container class="custom-featured-products__container custom-featured-products-collection__container">
        <div class="custom-featured-products__header">
          {%- if heading != blank -%}
            <h2 class="custom-featured-products__heading" data-aos="fade-up">{{ heading | escape }}</h2>
          {%- endif -%}
          {%- if subheading != blank -%}
            <div class="custom-featured-products__subheading" data-aos="fade-up">{{ subheading }}</div>
          {%- endif -%}
        </div>

        {%- if section.blocks.size > 0 -%}
          <div class="custom-featured-products__grid">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'product_card' %}
                  {%- liquid
                    assign product = block.settings.product
                    assign overtitle = block.settings.overtitle
                    assign description = block.settings.description
                    assign image = block.settings.custom_image | default: product.featured_image
                  -%}

                  <a
                    href="{{ product.url | default: '#' }}"
                    class="custom-featured-products__card"
                    style="--card-bg-color: {{ block.settings.background_color }}; --card-text-color: {{ block.settings.text_color }};"
                    {{ block.shopify_attributes }}
                  >
                    <div class="custom-featured-products__card-content">
                      {% if overtitle != blank %}
                        <span class="custom-featured-products__card-overtitle">{{ overtitle }}</span>
                      {% endif %}
                      {% if description != blank %}
                        <p class="custom-featured-products__card-description">{{ description }}</p>
                      {% endif %}
                    </div>
                    <div class="custom-featured-products__card-image-wrapper">
                      {% if image != blank %}
                        <img
                          src="{{ image | image_url: width: 500 }}"
                          alt="{{ image.alt | default: product.title }}"
                          loading="lazy"
                          width="{{ image.width }}"
                          height="{{ image.height }}"
                        >
                      {% endif %}
                    </div>
                  </a>

                {% when 'quiz_block' %}
                  <div
                    class="custom-featured-products__card custom-featured-products__card--quiz"
                    style="--card-bg-color: {{ block.settings.background_color }}; --card-text-color: {{ block.settings.text_color }};"
                    {{ block.shopify_attributes }}
                  >
                    <div class="quiz-layout">
                      <div class="quiz-left">
                        {% if block.settings.quiz_heading != blank %}
                          <h3 class="quiz-heading" data-aos="fade-up">{{ block.settings.quiz_heading }}</h3>
                        {% endif %}
                        {% if block.settings.quiz_subtext != blank %}
                          <p class="quiz-subtext" data-aos="fade-up">{{ block.settings.quiz_subtext }}</p>
                        {% endif %}
                      </div>
                      <div class="quiz-right">
                        {%- if block.settings.quiz_image != blank or block.settings.quiz_image_mobile != blank -%}
                          <a
                            href="{{ block.settings.quiz_link | default: '#' }}"
                            class="quiz-right__link"
                            {% if block.settings.quiz_open_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
                            aria-label="Take the quiz: {{ block.settings.quiz_heading | escape }}"
                          >
                            {% if block.settings.quiz_image != blank %}
                              <img
                                src="{{ block.settings.quiz_image | image_url: width: 800 }}"
                                alt="{{ block.settings.quiz_image.alt | default: 'Take the quiz' | escape }}"
                                loading="lazy"
                                width="{{ block.settings.quiz_image.width }}"
                                height="{{ block.settings.quiz_image.height }}"
                                class="quiz-right__image quiz-right__image--desktop"
                              >
                            {% endif %}
                            {% if block.settings.quiz_image_mobile != blank %}
                              <img
                                src="{{ block.settings.quiz_image_mobile | image_url: width: 800 }}"
                                alt="{{ block.settings.quiz_image_mobile.alt | default: 'Take the quiz' | escape }}"
                                loading="lazy"
                                width="{{ block.settings.quiz_image_mobile.width }}"
                                height="{{ block.settings.quiz_image_mobile.height }}"
                                class="quiz-right__image quiz-right__image--mobile"
                              >
                            {% elsif block.settings.quiz_image != blank %}
                               <img
                                src="{{ block.settings.quiz_image | image_url: width: 800 }}"
                                alt="{{ block.settings.quiz_image.alt | default: 'Take the quiz' | escape }}"
                                loading="lazy"
                                width="{{ block.settings.quiz_image.width }}"
                                height="{{ block.settings.quiz_image.height }}"
                                class="quiz-right__image quiz-right__image--mobile"
                              >
                            {% endif %}
                          </a>
                        {%- endif -%}
                      </div>
                    </div>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        {%- endif -%}
      </xo-container>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Featured Prod Col",
  "tag": "section",
  "class": "section",
  "max_blocks": 5,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "3 pillows. 1 perfect posture."
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>It's automatic: when your neck, shoulders, and hips fall into neutral alignment, you naturally rest your best.</p>"
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Custom Image",
          "info": "If left blank, the product's featured image will be used."
        },
        {
          "type": "text",
          "id": "overtitle",
          "label": "Overtitle",
          "info": "This text appears above the description (e.g., 'The Signature')."
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#E0F2FF"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#1E2A3B"
        }
      ]
    },
    {
      "type": "quiz_block",
      "name": "Quiz Block",
      "settings": [
        {
          "type": "text",
          "id": "quiz_heading",
          "label": "Quiz Heading",
          "default": "Need help? Take the quiz."
        },
        {
          "type": "textarea",
          "id": "quiz_subtext",
          "label": "Quiz Subtext",
          "default": "This quick quiz helps you find the right pillow for you."
        },
        {
          "type": "image_picker",
          "id": "quiz_image",
          "label": "Quiz Image (Desktop)"
        },
        {
          "type": "image_picker",
          "id": "quiz_image_mobile",
          "label": "Quiz Image (Mobile)"
        },
        {
          "type": "url",
          "id": "quiz_link",
          "label": "Quiz Link"
        },
        {
          "type": "checkbox",
          "id": "quiz_open_new_tab",
          "label": "Open link in a new tab",
          "default": true
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#1E1E5A"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#ffffff"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Featured Prod Col",
      "blocks": [
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "quiz_block" }
      ]
    }
  ]
}
{% endschema %}
