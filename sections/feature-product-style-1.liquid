{{ 'section-feature-product-style-1.css' | asset_url | stylesheet_tag }}

{% liquid
  assign layout = section.settings.layout
  assign product = section.settings.product
  assign class = section.settings.font_size_heading
  assign heading = section.settings.text_heading
  assign duration = section.settings.text_duration
  assign effect = section.settings.text_effect
  assign tag_name = section.settings.text_tag_name
  assign heading_width_desktop = section.settings.text_heading_width_desktop
  assign heading_width_mobile = section.settings.text_heading_width_mobile
  assign sub_heading = section.settings.sub_heading
  assign image_dt = section.settings.image_dt
  assign aspect_ratio_dt = section.settings.aspect_ratio_dt
  assign image_mb = section.settings.image_mb
  assign aspect_ratio_mb = section.settings.aspect_ratio_mb
  assign button = section.settings
%}

<section {% render 'section-attr' %}>
  <div class='feature-product-style-1'>
    <div class='feature-product-style-1__content' style='--aspect-ratio-desktop: {{ aspect_ratio_dt }}; --aspect-ratio-mobile: {{ aspect_ratio_mb }}'>
      {% render 'feature-product-1',
        layout: layout,
        product: product,
        class: class,
        heading: heading,
        tag_name: tag_name,
        effect: effect,
        duration: duration,
        heading_width_desktop: heading_width_desktop,
        heading_width_mobile: heading_width_mobile,
        sub_heading: sub_heading,
        image_dt: image_dt,
        aspect_ratio_dt: aspect_ratio_dt,
        image_mb: image_mb,
        aspect_ratio_mb: aspect_ratio_mb,
        button: button
      %}
    </div>
  </div>
</section>

