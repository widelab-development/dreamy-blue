{{ 'section-shop-the-look-style-2.css' | asset_url | stylesheet_tag }}

{% liquid
  assign layout = section.settings.layout
  assign image_dt = section.settings.image_dt
  assign aspect_ratio_dt = section.settings.aspect_ratio_dt
  assign image_mb = section.settings.image_mb
  assign aspect_ratio_mb = section.settings.aspect_ratio_mb
  assign point_type = section.settings.point_type
  assign point_size = section.settings.point_size
  assign class = section.settings.font_size_heading
  assign heading = section.settings.text_heading
  assign duration = section.settings.text_duration
  assign effect = section.settings.text_effect
  assign tag_name = section.settings.text_tag_name
  assign heading_width_desktop = section.settings.text_heading_width_desktop
  assign heading_width_mobile = section.settings.text_heading_width_mobile
%}

<section {% render 'section-attr' %}>
  <div class='shop-the-look-style-2' xo-popover-boundary>
    {% if layout == 'style-2' %}
      <xo-container class='shop-the-look-style-2__container'>
    {% endif %}
    <div class='shop-the-look-style-2__body'>
      {% if heading %}
        <div class='shop-the-look-style-2__heading'>
          {% render 'text',
            class: class,
            text: heading,
            tag_name: tag_name,
            effect: effect,
            duration: duration,
            heading_width_desktop: heading_width_desktop,
            heading_width_mobile: heading_width_mobile
          %}
        </div>
      {% endif %}
      <div class='shop-the-look-style-2__banner{% if settings.enable_border_radius %} shop-the-look-style-2__banner--radius{% endif %}'>
        {% if image_dt != blank %}
          <div class='shop-the-look-style-2__desktop'>
            {% render 'animate-image', image: image_dt, border_radius: 0, aspect_ratio: aspect_ratio_dt %}
          </div>
        {% else %}
          <div class='shop-the-look-style-2__desktop'>
            {% render 'animate-image', image: image_dt, border_radius: 0, aspect_ratio: aspect_ratio_dt %}
          </div>
        {% endif %}
        {% if image_mb != blank %}
          <div class='shop-the-look-style-2__mobile'>
            {% render 'animate-image', image: image_mb, border_radius: 0, aspect_ratio: aspect_ratio_mb %}
          </div>
        {% else %}
          <div class='shop-the-look-style-2__mobile'>
            {% render 'animate-image', image: image_mb, border_radius: 0, aspect_ratio: aspect_ratio_mb %}
          </div>
        {% endif %}
      </div>
      {% for block in section.blocks %}
        {% liquid
          assign top_dt = block.settings.top_dt
          assign top_mb = block.settings.top_mb
          assign left_dt = block.settings.left_dt
          assign left_mb = block.settings.left_mb
          assign color = block.settings.hotspot_color
          assign timer_delay = block.settings.timer_delay
        %}
        <div class='shop-the-look-style-2__content' style='--top_dt: {{ top_dt }}; --left_dt: {{ left_dt }}; --top_mb: {{ top_mb}}; --left_mb: {{ left_mb }}'>
          {% render 'shop-look-2',
            product: block.settings.product,
            placement: block.settings.placement,
            type: point_type,
            size: point_size,
            color: color,
            timer_delay: timer_delay
          %}
        </div>
      {% endfor %}
    </div>
    {% if layout == 'style-2' %}
      </xo-container>
    {% endif %}
  </div>
</section>

