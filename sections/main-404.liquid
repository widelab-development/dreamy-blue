{{ 'section-main-404.css' | asset_url | stylesheet_tag }}

{% liquid
  assign heading = section.settings.heading
  assign class = section.settings.font_size_heading
  assign sub_heading = section.settings.sub_heading
  assign content = section.settings.content
  assign button = section.settings
%}

<section {% render 'section-attr' %}>
  <div class='xo-404-page'>
    <xo-container class='xo-404-page__container'>
      <div class='xo-404-page__body'>
        {% if heading %}
          <xo-animate xo-cascade>
            <h2 class='xo-404-page__heading {{ class }}'>{{ heading }}</h2>
          </xo-animate>
        {% endif %}
        {% if sub_heading %}
          <xo-animate xo-cascade>
            <div class='xo-404-page__sub-heading h5'>
              {{ sub_heading }}
            </div>
          </xo-animate>
        {% endif %}
        {% if content %}
          <xo-animate xo-cascade>
            <div class='xo-404-page__content'>
              {{ content }}
            </div>
          </xo-animate>
        {% endif %}
        <xo-animate xo-cascade>
          <div class='xo-404-page__button'>
            {% render 'button',
              text: button.button_text,
              link: button.button_link,
              style: button.button_style,
              size: button.button_size,
              radius: settings.button_radius,
              padding: settings.button_padding
            %}
          </div>
        </xo-animate>
      </div>
    </xo-container>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.main_404.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.main_404.settings.header_text.content"
    },
    {
      "type": "select",
      "id": "font_size_heading",
      "label": "t:sections.all.font_size_heading.label",
      "default": "h2",
      "options": [
        {
          "value": "h1",
          "label": "t:sections.all.font_size_heading.option__1.label"
        },
        {
          "value": "h2",
          "label": "t:sections.all.font_size_heading.option__2.label"
        },
        {
          "value": "h3",
          "label": "t:sections.all.font_size_heading.option__3.label"
        },
        {
          "value": "h4",
          "label": "t:sections.all.font_size_heading.option__4.label"
        },
        {
          "value": "h5",
          "label": "t:sections.all.font_size_heading.option__5.label"
        },
        {
          "value": "h6",
          "label": "t:sections.all.font_size_heading.option__6.label"
        }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.main_404.settings.heading.label"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "t:sections.main_404.settings.sub_heading.label"
