{{ 'section-carousel-text.css' | asset_url | stylesheet_tag }}

{% liquid
  assign class = section.settings.font_size_heading
  assign speed = section.settings.speed
  assign pause_on_hover = section.settings.pause_on_hover
  assign direction = section.settings.direction
%}

<section {% render 'section-attr' %}>
  <div class='carousel-text'>
    <div class='carousel-text__content'>
      <xo-marquee
        xo-speed='{{ speed }}'
        {% if pause_on_hover == 'on' %}
          xo-pause-on-hover
        {% endif %}
        {% if direction == 'rtl' %}
          xo-rtl
        {% endif %}
      >
        {% for block in section.blocks %}
          {% liquid
            assign image = block.settings.image_icon
            assign heading = block.settings.heading
          %}
          <div class='carousel-text__box'>
            <div class='carousel-text__image'>
              {% render 'image', image: image %}
            </div>
            <h3 class='carousel-text__heading {{ class }}'>{{ heading }}</h3>
          </div>
        {% endfor %}
      </xo-marquee>
    </div>
  </div>
</section>

