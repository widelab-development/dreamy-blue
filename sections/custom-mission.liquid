      "default": "#C7B4D4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "image_picker",
      "id": "background_svg",
      "label": "Background SVG/Image"
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "overtitle",
      "label": "Overtitle",
      "default": "Our Mission"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Change your pillow."
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>At every age and life stage, our alignment-focused and adjustable products put control in your handsâ€”while putting your body in the perfect position for rejuvenation.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Our Dream"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
