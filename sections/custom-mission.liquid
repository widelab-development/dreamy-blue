<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

{{ 'section-custom-mission.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign background_color = section.settings.background_color
  assign text_color = section.settings.text_color
  assign overtitle = section.settings.overtitle
  assign heading = section.settings.heading
  assign description = section.settings.description
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
  assign button_bg_color = section.settings.button_bg_color
  assign button_text_color = section.settings.button_text_color
  assign animation_desktop_url = section.settings.animation_desktop_url
  assign animation_mobile_top_url = section.settings.animation_mobile_top_url
  assign animation_mobile_bottom_url = section.settings.animation_mobile_bottom_url
-%}

<section
  id="shopify-section-{{ section.id }}"
  class="custom-mission"
  style="--bg-color: {{ background_color }}; --text-color: {{ text_color }}; --btn-bg-color: {{ button_bg_color }}; --btn-text-color: {{ button_text_color }};"
>
  {%- if animation_desktop_url != blank -%}
    <div class="custom-mission__animation custom-mission__animation--desktop">
      <lottie-player
        src="{{ animation_desktop_url }}"
        background="transparent"
        speed="1"
      ></lottie-player>
    </div>
  {%- endif -%}

  {%- if animation_mobile_top_url != blank -%}
    <div class="custom-mission__animation custom-mission__animation--mobile-top">
      <lottie-player
        src="{{ animation_mobile_top_url }}"
        background="transparent"
        speed="1"
      ></lottie-player>
    </div>
  {%- endif -%}

  <div class="custom-mission__content-wrapper">
    <xo-container>
      <div class="custom-mission__content">
        {%- if overtitle != blank -%}
          <span class="custom-mission__overtitle" data-aos="fade-up">{{ overtitle }}</span>
        {%- endif -%}

        {%- if heading != blank -%}
          <h2 class="custom-mission__heading" data-aos="fade-up">{{ heading }}</h2>
        {%- endif -%}

        {%- if description != blank -%}
          <div class="custom-mission__description" data-aos="fade-up">{{ description }}</div>
        {%- endif -%}

        {%- if button_text != blank -%}
          <a href="{{ button_link | default: '#' }}" class="custom-mission__button">
            {{ button_text }}
          </a>
        {%- endif -%}
      </div>
    </xo-container>
  </div>

  {%- if animation_mobile_bottom_url != blank -%}
    <div class="custom-mission__animation custom-mission__animation--mobile-bottom">
      <lottie-player
        src="{{ animation_mobile_bottom_url }}"
        background="transparent"
        speed="1"
      ></lottie-player>
    </div>
  {%- endif -%}
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.getElementById('shopify-section-{{ section.id }}');
    if (!section) return;

    const observerOptions = {
      root: null, 
      rootMargin: '0px',
      threshold: 0.2 
    };

    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const lottiePlayers = section.querySelectorAll('lottie-player');
          lottiePlayers.forEach(player => {
            if (player.getLottie) {
               player.play();
            } else {
              player.addEventListener('ready', () => player.play());
            }
          });
          observer.unobserve(section);
        }
      });
    }, observerOptions);

    observer.observe(section);
  });
</script>

