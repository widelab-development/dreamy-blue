{% liquid
  assign class = section.settings.font_size_heading
  assign heading = section.settings.text_heading
  assign duration = section.settings.text_duration
  assign effect = section.settings.text_effect
  assign tag_name = section.settings.text_tag_name
  assign heading_width_desktop = section.settings.text_heading_width_desktop
  assign heading_width_mobile = section.settings.text_heading_width_mobile
  assign image = section.settings.image
  assign title_list = section.settings.list_title
  assign content_list = section.settings.list_content
  assign color_schema_specification = section.settings.color_schema_specification
  assign block = section.blocks
%}

<section {% render 'section-attr' %}>
  <div class='featured-collection-style-2'>
    <xo-container class='featured-collection-style-2__container'>
      <div class='featured-collection-style-2__content'>
        {% render 'featured-collection-2',
          class: class,
          heading: heading,
          duration: duration,
          effect: effect,
          tag_name: tag_name,
          heading_width_desktop: heading_width_desktop,
          heading_width_mobile: heading_width_mobile,
          image: image,
          title_list: title_list,
          content_list: content_list,
          color_schema_specification: color_schema_specification,
          block: block
        %}
      </div>
    </xo-container>
  </div>
</section>

