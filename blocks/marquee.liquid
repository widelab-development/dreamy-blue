{% liquid
  capture content
    content_for 'blocks'
  endcapture
%}

{% render 'marquee-block',
  marquee_speed: block.settings.marquee_speed,
  item_space: block.settings.item_space,
  stop_marquee: block.settings.stop_marquee,
  marquee_right_to_left: block.settings.marquee_right_to_left,
  content: content
%}

{% schema %}
{
  "name": "t:blocks.marquee.name",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "settings": [
    {
      "type": "range",
      "id": "item_space",
      "min": 1,
      "max": 10,
      "step": 0.5,
      "unit": "rem",
      "label": "t:blocks.marquee.settings.item_space.label",
      "default": 3
    },
    {
      "type": "range",
      "id": "marquee_speed",
      "label": "t:blocks.marquee.settings.marquee_speed.label",
      "default": 1,
      "min": 1,
      "max": 10,
      "step": 1
    },
    {
      "type": "checkbox",
      "id": "stop_marquee",
      "label": "t:blocks.marquee.settings.stop_marquee.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "marquee_right_to_left",
      "label": "t:blocks.marquee.settings.marquee_right_to_left.label",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "t:blocks.marquee.presets.name"
    }
  ]
}
{% endschema %}
