  "settings": [
    {
      "type": "header",
      "content": "t:blocks.image_button.settings.header_1.content"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "t:blocks.image_button.settings.image.label"
    },
    {
      "type": "select",
      "id": "aspect_ratio_desktop",
      "label": "t:sections.all.aspect_ratio.label",
      "default": "auto",
      "options": [
        {
          "value": "auto",
          "label": "t:sections.all.aspect_ratio.option__1.label"
        },
