{% liquid
  capture content
    content_for 'blocks'
  endcapture
%}

{% render 'grid-block',
  content: content,
  desktop_col: block.settings.desktop_col,
  tablet_col: block.settings.tablet_col,
  mobile_col: block.settings.mobile_col,
  auto_row: block.settings.auto_row,
  fixed_row: block.settings.fixed_row
%}

{% schema %}
{
  "name": "t:blocks.grid.name",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "t:blocks.grid.settings.header_1.content"
    },
    {
      "type": "range",
      "id": "desktop_col",
      "label": "t:blocks.grid.settings.column.label",
      "default": 4,
      "min": 1,
      "max": 12,
      "step": 1
    },
    {
      "type": "checkbox",
      "id": "fixed_row",
      "label": "t:blocks.grid.settings.fixed_row.label",
      "default": false
    },
    {
      "type": "range",
      "id": "auto_row",
      "label": "t:blocks.grid.settings.auto_row.label",
      "default": 20,
      "min": 1,
      "max": 90,
      "step": 1
    },
    {
      "type": "header",
      "content": "t:blocks.grid.settings.header_2.content"
    },
    {
      "type": "range",
      "id": "tablet_col",
      "label": "t:blocks.grid.settings.column.label",
      "default": 2,
      "min": 1,
      "max": 12,
      "step": 1
    },
    {
      "type": "header",
      "content": "t:blocks.grid.settings.header_3.content"
    },
    {
      "type": "range",
      "id": "mobile_col",
      "label": "t:blocks.grid.settings.column.label",
      "default": 1,
      "min": 1,
      "max": 12,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "t:blocks.grid.presets.name",
      "settings": {
        "desktop_col": 3
      },
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}
