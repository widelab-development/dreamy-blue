{% liquid
  assign duration = 1000
  if duration != 0
    assign duration = block.settings.duration
  endif
  assign stroke_width = 10
  if stroke_width != 0
    assign stroke_width = block.settings.stroke_width
  endif
  assign size = 200
  if size != 0
    assign size = block.settings.size
  endif
%}

{% render 'circle-bar-block',
  value: block.settings.value,
  duration: duration,
  stroke_width: stroke_width,
  size: size,
  track_color: block.settings.track_color,
  thumb_color: block.settings.thumb_color
%}

{% schema %}
{
  "name": "t:blocks.circle_bar.name",
  "settings": [
    {
      "type": "number",
      "id": "value",
      "label": "t:blocks.circle_bar.settings.value.label",
      "info": "t:blocks.circle_bar.settings.value.info",
      "default": 50
    },
    {
      "type": "number",
      "id": "duration",
      "label": "t:blocks.circle_bar.settings.duration.label",
      "default": 2000
    },
    {
      "type": "number",
      "id": "stroke_width",
      "label": "t:blocks.circle_bar.settings.stroke_width.label",
      "default": 10
    },
    {
      "type": "number",
      "id": "size",
      "label": "t:blocks.circle_bar.settings.size.label",
      "default": 200
    },
    {
      "type": "color",
      "id": "track_color",
      "label": "t:blocks.circle_bar.settings.track_color.label",
      "default": "#c4c4c4"
    },
    {
      "type": "color",
      "id": "thumb_color",
      "label": "t:blocks.circle_bar.settings.thumb_color.label",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "t:blocks.circle_bar.presets.name"
    }
  ]
}
{% endschema %}
