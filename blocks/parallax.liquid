  top: block.settings.top,
  left: block.settings.left,
  width: block.settings.width,
  desktop_top_from: block.settings.desktop_top_from,
  desktop_top_to: block.settings.desktop_top_to,
  desktop_left_from: block.settings.desktop_left_from,
  desktop_left_to: block.settings.desktop_left_to,
  desktop_scale_from: block.settings.desktop_scale_from,
  desktop_scale_to: block.settings.desktop_scale_to,
  mobile_top_from: block.settings.mobile_top_from,
  mobile_top_to: block.settings.mobile_top_to,
  mobile_left_from: block.settings.mobile_left_from,
  mobile_left_to: block.settings.mobile_left_to,
