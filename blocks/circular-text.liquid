{% render 'circular-text-block',
  text: block.settings.text,
  text_color: block.settings.text_color,
  size: block.settings.size,
  font_size: block.settings.font_size,
  letter_spacing: block.settings.letter_spacing,
  padding: block.settings.padding,
  stroke_color: block.settings.stroke_color,
  stroke_width: block.settings.stroke_width,
  direction: block.settings.direction,
  speed_rotate: block.settings.speed_rotate,
  image: block.settings.image
%}

{% schema %}
{
  "name": "t:blocks.circular_text.name",
  "settings": [
    {
      "type": "textarea",
      "id": "text",
      "label": "t:blocks.circular_text.settings.text.label",
      "default": "Circular text"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:blocks.circular_text.settings.text_color.label",
      "default": "#f00000"
    },
    {
      "type": "number",
      "id": "size",
      "label": "t:blocks.circular_text.settings.size.label",
      "default": 150
    },
    {
      "type": "number",
      "id": "font_size",
      "label": "t:blocks.circular_text.settings.font_size.label",
      "default": 15
    },
    {
      "type": "range",
      "id": "letter_spacing",
      "label": "t:blocks.circular_text.settings.letter_spacing.label",
      "default": 17,
      "min": 0,
      "max": 20
    },
    {
      "type": "range",
      "id": "padding",
      "label": "t:blocks.circular_text.settings.padding.label",
      "default": 8,
      "min": 0,
      "max": 100
    },
    {
      "type": "color",
      "id": "stroke_color",
      "label": "t:blocks.circular_text.settings.stroke_color.label",
      "default": "#f00000"
    },
    {
      "type": "range",
      "id": "stroke_width",
      "label": "t:blocks.circular_text.settings.stroke_width.label",
      "default": 2,
      "min": 0,
      "max": 10
    },
    {
      "type": "range",
      "id": "speed_rotate",
      "label": "t:blocks.circular_text.settings.speed_rotate.label",
      "default": 10,
      "min": 0,
      "max": 15
    },
    {
      "type": "select",
      "id": "direction",
      "label": "t:blocks.circular_text.settings.direction.label",
      "default": "clockwise",
      "options": [
        {
          "value": "clockwise",
          "label": "t:blocks.circular_text.settings.direction.options_1.label"
        },
        {
          "value": "counterclockwise",
          "label": "t:blocks.circular_text.settings.direction.options_2.label"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:blocks.circular_text.settings.image.label"
    }
  ],
  "presets": [
    {
      "name": "t:blocks.circular_text.presets.name"
    }
  ]
}
{% endschema %}
