{% render 'scroll-to-block', selector: block.settings.selector, button_text: block.settings.button_text, icon_name: block.settings.icon_name, icon_size: block.settings.icon_size %}

{% schema %}
{
  "name": "t:blocks.scroll_to.name",
  "settings": [
    {
      "type": "text",
      "id": "selector",
      "label": "t:blocks.scroll_to.settings.selector.label",
      "default": "#top",
      "info": "t:blocks.scroll_to.settings.selector.info"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:blocks.scroll_to.settings.button_text.label",
      "default": "Button label"
    },
    {
      "type": "select",
      "id": "icon_name",
      "label": "t:blocks.scroll_to.settings.icon_name.label",
      "default": "none",
      "options": [
        {
          "value": "none",
          "label": "t:blocks.scroll_to.settings.icon_name.options_1.label"
        },
        {
          "value": "arrow-up",
          "label": "t:blocks.scroll_to.settings.icon_name.options_2.label"
        },
        {
          "value": "arrow-down",
          "label": "t:blocks.scroll_to.settings.icon_name.options_3.label"
        },
        {
          "value": "chevron-up",
          "label": "t:blocks.scroll_to.settings.icon_name.options_4.label"
        },
        {
          "value": "chevron-down",
          "label": "t:blocks.scroll_to.settings.icon_name.options_5.label"
        }
      ]
    },
    {
      "type": "number",
      "id": "icon_size",
      "label": "t:blocks.scroll_to.settings.icon_size.label"
    }
  ],
  "presets": [
    {
      "name": "t:blocks.scroll_to.presets.name"
    }
  ]
}
{% endschema %}
