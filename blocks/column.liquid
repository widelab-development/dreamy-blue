{% liquid
  capture content
    content_for 'blocks'
  endcapture
%}

{%- render 'column-block',
  content: content,
  desktop_row_span: block.settings.desktop_row_span,
  desktop_col_span: block.settings.desktop_col_span,
  mobile_row_span: block.settings.mobile_row_span,
  mobile_col_span: block.settings.mobile_col_span
-%}

{% schema %}
{
  "name": "t:blocks.column.name",
  "class": "xo-column-2",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "t:blocks.column.settings.header_1.content"
    },
    {
      "type": "range",
      "id": "desktop_col_span",
      "label": "t:blocks.column.settings.col_span.label",
      "default": 1,
      "min": 1,
      "max": 12,
      "step": 1
    },
    {
      "type": "range",
      "id": "desktop_row_span",
      "label": "t:blocks.column.settings.row_span.label",
      "default": 1,
      "min": 1,
      "max": 12,
      "step": 1
    },
    {
      "type": "header",
      "content": "t:blocks.column.settings.header_2.content"
    },
    {
      "type": "range",
      "id": "mobile_col_span",
      "label": "t:blocks.column.settings.col_span.label",
      "default": 1,
      "min": 1,
      "max": 12,
      "step": 1
    },
    {
      "type": "range",
      "id": "mobile_row_span",
      "label": "t:blocks.column.settings.row_span.label",
      "default": 1,
      "min": 1,
      "max": 12,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "t:blocks.column.presets.name"
    }
  ]
}
{% endschema %}
