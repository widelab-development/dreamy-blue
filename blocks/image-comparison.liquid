{% render 'image-comparison-block', image_before: block.settings.image_before, image_after: block.settings.image_after %}

{% schema %}
{
  "name": "t:blocks.image_comparison.name",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_before",
      "label": "t:blocks.image_comparison.settings.image_before.label"
    },
    {
      "type": "image_picker",
      "id": "image_after",
      "label": "t:blocks.image_comparison.settings.image_after.label"
    }
  ],
  "presets": [
    {
      "name": "t:blocks.image_comparison.presets.name"
    }
  ]
}
{% endschema %}
