{% render 'line-chart-block',
  x_axis_labels: block.settings.x_axis_labels,
  y_axis_labels: block.settings.y_axis_labels,
  max_value: block.settings.max_value,
  first_line_data: block.settings.first_line_data,
  first_line_color: block.settings.first_line_color,
  second_line_data: block.settings.second_line_data,
  second_line_color: block.settings.second_line_color,
  grid_color: block.settings.grid_color,
  grid_type: block.settings.grid_type,
  margin: block.settings.margin,
  smoothness: block.settings.smoothness,
  chart_aspect_ratio: block.settings.chart_aspect_ratio
%}

{% schema %}
{
  "name": "t:blocks.line_chart.name",
  "settings": [
    {
      "type": "header",
      "content": "t:blocks.line_chart.settings.header_1.content"
    },
    {
      "type": "select",
      "id": "chart_aspect_ratio",
      "label": "t:sections.all.aspect_ratio.label",
      "default": "16/9",
      "options": [
        {
          "value": "auto",
          "label": "t:sections.all.aspect_ratio.option__1.label"
        },
        {
          "value": "2/3",
          "label": "t:sections.all.aspect_ratio.option__2.label"
        },
        {
          "value": "3/4",
          "label": "t:sections.all.aspect_ratio.option__3.label"
        },
        {
          "value": "3/2",
          "label": "t:sections.all.aspect_ratio.option__4.label"
        },
        {
          "value": "1",
          "label": "t:sections.all.aspect_ratio.option__5.label"
        },
        {
          "value": "4/3",
          "label": "t:sections.all.aspect_ratio.option__6.label"
        },
        {
          "value": "16/9",
          "label": "t:sections.all.aspect_ratio.option__7.label"
        },
        {
          "value": "21/9",
          "label": "t:sections.all.aspect_ratio.option__8.label"
        }
      ]
    },
    {
      "type": "color",
      "id": "grid_color",
      "label": "t:blocks.line_chart.settings.grid_color.label",
      "default": "#dddddd"
    },
    {
      "type": "select",
      "id": "grid_type",
      "label": "t:blocks.line_chart.settings.grid_type.label",
      "default": "dashed",
      "options": [
        {
          "value": "solid",
          "label": "t:blocks.line_chart.settings.grid_type.options_1.label"
        },
        {
          "value": "dashed",
          "label": "t:blocks.line_chart.settings.grid_type.options_2.label"
        }
      ]
    },
    {
      "type": "number",
      "id": "margin",
      "label": "t:blocks.line_chart.settings.margin.label",
      "default": 40
    },
    {
      "type": "range",
      "id": "smoothness",
      "label": "t:blocks.line_chart.settings.smoothness.label",
      "default": 1,
      "min": 0,
      "max": 1,
      "step": 0.1
    },
    {
      "type": "text",
      "id": "x_axis_labels",
      "label": "t:blocks.line_chart.settings.x_axis_labels.label",
      "info": "t:blocks.line_chart.settings.x_axis_labels.info",
      "default": "['0', '1h', '2h', '3h', '4h', '5h', '6h']"
    },
    {
      "type": "text",
      "id": "y_axis_labels",
      "label": "t:blocks.line_chart.settings.y_axis_labels.label",
      "info": "t:blocks.line_chart.settings.y_axis_labels.info",
      "default": "['0', '20', '40', '60']"
    },
    {
      "type": "number",
      "id": "max_value",
      "label": "t:blocks.line_chart.settings.max_value.label",
      "default": 60
    },
    {
      "type": "header",
      "content": "t:blocks.line_chart.settings.header_2.content"
    },
    {
      "type": "text",
      "id": "first_line_data",
      "label": "t:blocks.line_chart.settings.first_line_data.label",
      "info": "t:blocks.line_chart.settings.first_line_data.info",
      "default": "[0, 20, 10, 35, 50, 40]"
    },
    {
      "type": "color",
      "id": "first_line_color",
      "label": "t:blocks.line_chart.settings.first_line_color.label",
      "default": "#1ec5d4"
    },
    {
      "type": "header",
      "content": "t:blocks.line_chart.settings.header_3.content"
    },
    {
      "type": "text",
      "id": "second_line_data",
      "label": "t:blocks.line_chart.settings.second_line_data.label",
      "default": "[0, 10, 30, 20]"
    },
    {
      "type": "color",
      "id": "second_line_color",
      "label": "t:blocks.line_chart.settings.second_line_color.label",
      "default": "#fb0000"
    }
  ],
  "presets": [
    {
      "name": "t:blocks.line_chart.presets.name"
    }
  ]
}
{% endschema %}
