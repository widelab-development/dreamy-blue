{{ 'video.css' | asset_url | stylesheet_tag }}
{{ 'media.css' | asset_url | stylesheet_tag }}

{% render 'video',
  video: block.settings.video,
  video_url: block.settings.video_url,
  enable_video_looping: block.settings.enable_video_looping,
  cover_image: block.settings.cover_image,
  video_alt_text: block.settings.video_alt_text,
  controls: true,
  autoplay: true
%}

{% schema %}
{
  "name": "t:blocks.video.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_video_looping",
      "label": "t:blocks.video.settings.enable_video_looping.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:blocks.video.settings.header_1.content"
    },
    {
      "type": "video",
      "id": "video",
      "label": "t:blocks.video.settings.video.label"
    },
    {
      "type": "header",
      "content": "t:blocks.video.settings.header_2.content"
    },
    {
      "type": "paragraph",
      "content": "t:blocks.video.settings.paragraph.content"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "t:blocks.video.settings.video_url.label",
      "accept": [
        "youtube",
        "vimeo"
      ],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "t:blocks.video.settings.cover_image.label"
    },
    {
      "type": "text",
      "id": "video_alt_text",
      "label": "t:blocks.video.settings.video_alt_text.label",
      "info": "t:blocks.video.settings.video_alt_text.info"
    }
  ],
  "presets": [
    {
      "name": "t:blocks.video.presets.name"
    }
  ]
}
{% endschema %}
