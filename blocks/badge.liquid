{% render 'badge-block', image: block.settings.image, text: block.settings.text, bg_color: block.settings.bg_color, text_color: block.settings.text_color %}

{% schema %}
{
  "name": "t:blocks.badge.name",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:blocks.badge.settings.image.label"
    },
    {
      "type": "text",
      "id": "text",
      "label": "t:blocks.badge.settings.text.label",
      "default": "Badge"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "t:blocks.badge.settings.bg_color.label",
      "default": "#19FFA0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:blocks.badge.settings.text_color.label",
      "default": "#242833"
    }
  ],
  "presets": [
    {
      "name": "t:blocks.badge.presets.name"
    }
  ]
}
{% endschema %}
