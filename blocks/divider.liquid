{% render 'divider-block',
  text: block.settings.text,
  divider_width: block.settings.divider_width,
  divider_style: block.settings.divider_style,
  divider_weight: block.settings.divider_weight
%}

{% schema %}
{
  "name": "t:blocks.divider.name",
  "settings": [
    {
      "type": "textarea",
      "id": "text",
      "label": "t:blocks.divider.settings.text.label",
      "default": "Divider"
    },
    {
      "type": "range",
      "id": "divider_width",
      "label": "t:blocks.divider.settings.divider_width.label",
      "default": 50,
      "min": 0,
      "max": 100
    },
    {
      "type": "range",
      "id": "divider_weight",
      "label": "t:blocks.divider.settings.divider_weight.label",
      "default": 1,
      "min": 1,
      "max": 10
    },
    {
      "type": "select",
      "id": "divider_style",
      "label": "t:blocks.divider.settings.divider_style.label",
      "default": "solid",
      "options": [
        {
          "value": "solid",
          "label": "t:blocks.divider.settings.divider_style.options_1.label"
        },
        {
          "value": "dashed",
          "label": "t:blocks.divider.settings.divider_style.options_2.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:blocks.divider.presets.name"
    }
  ]
}
{% endschema %}
