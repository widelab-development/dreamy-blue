{% comment %}
  Renders a quantity selector for a product

  Accepts:
  - value: {number} value of input number

  Usage:
  {% render 'quantity', size: 'sm' %}
{% endcomment %}

<xo-cart-quantity class='xo-quantity{% if size %} xo-quantity--{{ size }}{% endif %}{% if settings.enable_border_radius %} xo-quantity--radius{% endif %}'>
  <xo-cart-quantity-minus
    class='xo-quantity__button xo-quantity__button--minus {% if value < 2 %} xo-quantity__button--blur {% endif %}'
    tabindex='0'
    role='button'
    aria-label='Minus'
  >
    {% render 'icon', name: 'minus', size: '1.6rem' %}
  </xo-cart-quantity-minus>
  <input
    class='xo-quantity__number'
    type='number'
    name='quantity'
    value='{{ value }}'
    tabindex='-1'
    aria-label='Quantity input'
  >
  <xo-cart-quantity-plus class='xo-quantity__button xo-quantity__button--plus' tabindex='0' role='button' aria-label='Plus'>
    {% render 'icon', name: 'plus', size: '1.6rem' %}
  </xo-cart-quantity-plus>
</xo-cart-quantity>
