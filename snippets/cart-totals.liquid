{% comment %}
  Renders a cart's subtotal and total price.

  Usage:
  {% render 'cart-totals' %}
{% endcomment %}

<xo-cart-will-change xo-unique-id='xo-cart-totals-{{ section.id }}' class='xo-cart-totals'>
  {% if cart != empty %}
    <div class='xo-cart-totals__subtotal'>{{ 'sections.cart.subtotal' | t }}</div>
    <div class='xo-cart-totals__value'>{{ cart.total_price | money_with_currency }}</div>
  {% endif %}
</xo-cart-will-change>
